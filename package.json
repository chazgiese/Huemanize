{
  "name": "huemanize",
  "version": "1.0.0",
  "description": "A Figma plugin for perceptual color interpolation",
  "main": "code.js",
  "scripts": {
    "build": "esbuild code.ts --bundle --platform=node --target=es2017 --outfile=code.js --format=iife --global-name=plugin",
    "dev": "esbuild code.ts --bundle --platform=node --target=es2017 --outfile=code.js --format=iife --global-name=plugin --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["figma", "plugin", "design", "color", "interpolation"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.82.0",
    "typescript": "^5.3.2",
    "esbuild": "^0.19.8"
  },
  "dependencies": {
    "culori": "^3.2.0"
  }
}
